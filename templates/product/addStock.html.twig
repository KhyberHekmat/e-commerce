{% extends 'base.html.twig' %}

{% block title %} Add Stock {% endblock %}

{% block body %}

    <div class="container">
        <h1>Add new stock for : {{ product.name }}</h1>
        {% include 'layouts/_flash_message.html.twig' %}
        {{ form_start(form) }}
            {{ form_row(form.quantity,{'attr':{'class':'form form-control'}}) }}
            <input type="submit" class="btn btn-primary btn-block"> 
        {{ form_end(form) }}
    </div>

{% endblock %}