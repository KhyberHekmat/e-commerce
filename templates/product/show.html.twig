{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        
        <h1>Product</h1>
        
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td>{{ product.Photo }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-secondary btn-block">edit</a>

        {{ include('product/_delete_form.html.twig') }}

        <a href="{{ path('app_product_index') }}" class="btn btn-outline-info">back to list</a>
    </div>
{% endblock %}
