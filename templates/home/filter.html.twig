{% extends 'base.html.twig' %}

{%  block  title %}Filtered products by Sub-Category {% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ subCategory.name }}</h1>
        <div class="row">
            {% for product in products %}
                <div class="col-md-3 mt-4">
                    <div class="card">
                        <img src="{{ asset('uploads/images/'~product.photo) }}" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <a href="{{ path('app_home_product_show', {'id':product.id}) }}"><h5>{{ product.name }}</h5></a>
                            <p class="card-text">{{ product.description|slice(0, 60) }}</p>
                            <h3>{{ product.price }}<h3>
                            <a href="{{ path('app_cart_new',{'id':product.id}) }}" class="text-success">Add to Cart</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {{ knp_pagination_render(products, 'layouts/pagination.html.twig') }}
    </div>
{% endblock %}